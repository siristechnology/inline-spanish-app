{
	"root": true,
	"extends": "@react-native-community",
	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"jsxBracketSameLine": true,
				"singleQuote": true,
				"trailingComma": "all",
				"tabWidth": 4,
				"semi": false,
				"useTabs": true
			}
		],
		"semi": "off",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": "error",
		"no-tabs": "off",
		"eol-last": "off",
		"generator-star-spacing": "off",
		"comma-dangle": "off"
	}
}
